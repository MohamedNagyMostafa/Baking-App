<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="StepButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/start_fit_margin</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorIcon</item>
    </style>

    <!-- Circle Style -->
    <style name="circleMargin">
        <item name="android:layout_marginStart">@dimen/twice_margin</item>
        <item name="android:layout_marginTop">@dimen/start_fit_margin</item>
        <item name="android:layout_marginBottom">@dimen/twice_margin</item>
        <item name="android:layout_marginEnd">@dimen/start_fit_margin</item>
    </style>

    <style name="activeCircle" parent="circleMargin">
        <item name="android:layout_width">@dimen/twice_margin</item>
        <item name="android:layout_height">@dimen/twice_margin</item>
        <item name="android:background">@drawable/step_circle_active</item>
    </style>

    <!-- Text Style -->
    <style name="text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/start_fit_margin</item>
        <item name="android:layout_marginStart">@dimen/start_fit_margin</item>
    </style>

    <style name="primaryText" parent="text">
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="secondaryText" parent="text">
        <item name="android:textColor">@color/colorSecondaryText</item>
    </style>

    <style name="iconText" parent="text">
        <item name="android:textColor">@color/colorIcon</item>
    </style>

    <!-- Divider Section -->
    <style name="divider">
        <item name="android:background">@color/colorDivider</item>
    </style>

    <style name="verticalDivider" parent="divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

</resources>
